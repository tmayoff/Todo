    link(rel='stylesheet', href='/stylesheets/custom.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

    script(src="/scripts/layout.js")

  body.d-flex.flex-column
    header
      nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
        .d-flex.justify-content-center
            if lists
              #sidebarCollapse.align-self-center.text-light
                i.fas.fa-align-justify
            h3.m-0.ml-3.text-light Todo
    
    main.d-flex.flex-grow-1.w-100
      if lists
        #sidebar.bg-light.p-1
          .btn.btn-outline-info#dismiss
            i.fas.fa-arrow-left
          h1.sidebar-header Lists
          each list in lists
            a.btn(href="/lists/" + list.name class='bg-' + list.color).card.card-success.mb-2.shadow-hover
              span(style="font-size: 1.5rem;")= list.name   
      .content.flex-grow-1.pt-5
        block content
    .overlay